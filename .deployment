[config]
# Let Oryx perform the build and install on the server so Linux-compatible
# node binaries (including `next`) are created instead of uploading local
# (Windows) node_modules which can produce incompatible `.bin` shims.
SCM_DO_BUILD_DURING_DEPLOYMENT=true
# Keep startup command simple; Oryx will run the build/install. Use `npm start`.
command = bash -c "cd /home/site/wwwroot && npm start"