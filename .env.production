# Production environment variables for Azure deployment
# Replace these values with your actual Azure services information

# Database connection string (Azure SQL Database)
# Format: sqlserver://[server]:[port];database=[database];user=[user];password=[password];encrypt=true;trustServerCertificate=false;connection timeout=30;
# This will be populated from GitHub Secret DATABASE_URL at build time
DATABASE_URL="sqlserver://your-server.database.windows.net:1433;database=pryysm;user=admin@your-server;password=YourPassword;encrypt=true;trustServerCertificate=false;connection timeout=30;"

# Node environment
NODE_ENV=production

# Public API URL (adjust to your actual Azure app name)
NEXT_PUBLIC_API_URL=https://pryysm-v2-dyfqbdd3g4gycnee.uaenorth-01.azurewebsites.net/api

# Set this to control which port the app listens on (Azure uses 8080 by default)
PORT=8080

# ==========================================
# NextAuth Configuration
# ==========================================
# These are injected from GitHub Secrets at build time
NEXTAUTH_URL="https://pryysm.app"
# NEXTAUTH_SECRET is injected from GitHub Secrets

# ==========================================
# Azure AD (Microsoft Entra) Configuration
# ==========================================
# These are injected from GitHub Secrets at build time
# AZURE_AD_CLIENT_ID is injected from GitHub Secrets
# AZURE_AD_TENANT_ID is injected from GitHub Secrets
